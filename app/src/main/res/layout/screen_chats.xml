<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#135CAF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_chat_title"
        android:src="@drawable/ic_def_contact"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/text_title"
        android:text="User Name"
        android:textSize="18sp"
        android:textStyle="italic|bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/icon_chat_title"
        app:layout_constraintBottom_toBottomOf="@id/icon_chat_title"
        app:layout_constraintStart_toEndOf="@id/icon_chat_title" />


    <ImageView
        android:id="@+id/icon_chat_add"
        android:src="@drawable/icon_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/icon_chat_title"
        app:layout_constraintBottom_toBottomOf="@id/icon_chat_title"
        app:layout_constraintEnd_toEndOf="@id/title" />


    <ImageView
        android:id="@+id/icon_chat_search"
        android:src="@drawable/icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/icon_chat_title"
        app:layout_constraintBottom_toBottomOf="@id/icon_chat_title"
        app:layout_constraintEnd_toStartOf="@id/icon_chat_add" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_come" />
</androidx.constraintlayout.widget.ConstraintLayout>
