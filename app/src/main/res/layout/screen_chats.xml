<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title Bar with Image and Search Icon -->
    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#135CAF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_chat_title"
        android:src="@drawable/ic_def_contact"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_title"
        android:text="User Name"
        android:textSize="18sp"
        android:padding="4dp"
        android:textStyle="italic|bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/icon_chat_title"
        app:layout_constraintBottom_toBottomOf="@id/icon_chat_title"
        app:layout_constraintStart_toEndOf="@id/icon_chat_title" />

    <ImageView
        android:id="@+id/icon_chat_add"
        android:src="@drawable/icon_add"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/icon_chat_title"
        app:layout_constraintBottom_toBottomOf="@id/icon_chat_title"
        app:layout_constraintEnd_toEndOf="@id/title" />

    <ImageView
        android:id="@+id/icon_chat_search"
        android:src="@drawable/icon_search"
        android:layout_width="24dp"
        android:padding="2dp"
        android:layout_height="24dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/icon_chat_title"
        app:layout_constraintBottom_toBottomOf="@id/icon_chat_title"
        app:layout_constraintEnd_toStartOf="@id/icon_chat_add" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/chat_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_come" />

    <LinearLayout
        android:id="@+id/chat_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <EditText
            android:id="@+id/input_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textMultiLine" />


        <ImageView
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:padding="12dp"
            android:contentDescription="Send Message"
            android:layout_gravity="center_vertical"
            app:tint="@color/primaryColor" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
